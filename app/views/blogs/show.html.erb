<section class='container blogcover'>
  <div class='blogshow'>
  <h1><%= @blog.title %></h1>
  <%= link_to("#{@blog.tag}", "/blogs/tag/#{@blog.tag}", class: "tag") %>
  <div class='flex'>
  <%= image_tag('azy.png') %>
  <span class='date'><%= "作成日 " + @blog.created_at.strftime("%Y年%m月%d日") %><br>
  <%= "更新日 #{@blog.updated_at.strftime('%Y年%m月%d日')}" if @blog.created_at.strftime("%Y年%m月%d日") != @blog.updated_at.strftime("%Y年%m月%d日") %></span>
  </div>
  <div class='content'>
    <%= @blog.content.html_safe %>
  </div>
  </div>
</section>
<section>
  <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
</section>
<%= link_to('EDIT', edit_blog_path(@blog.id), class: 'btn') if user_signed_in? %>
<%= link_to('DELETE', blog_path(@blog.id), class: 'btn', method: :delete) if user_signed_in? %>

<h2 class="mt-5"><%= link_to("Related Blogs", blogs_path) %></h2>
<p>関連ブログ</p>
<div class='row justify-content-center'>
  <%= render @blogs %>
</div>


<script src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js?&skin=sunburst"></script>
